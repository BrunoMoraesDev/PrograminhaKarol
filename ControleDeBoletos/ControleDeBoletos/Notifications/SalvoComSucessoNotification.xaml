<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControleDeBoletos.Notifications"
             xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="ControleDeBoletos.Notifications.SalvoComSucessoNotification"
             mc:Ignorable="d">
    <Border
        Background="White"
        BorderThickness="1">
        <hc:SimplePanel Height="151" VerticalAlignment="Center" Width="323">
            <TextBlock Text="Salvo com sucesso!" FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Button Command="hc:ControlCommands.CloseWindow" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" Content="Fechar" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,84,10,0"/>
        </hc:SimplePanel>
    </Border>
</UserControl>
