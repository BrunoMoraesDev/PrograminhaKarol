<Window x:Class="ControleDeBoletos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleDeBoletos"
        mc:Ignorable="d"
        Title="MainWindow" Height="588" Width="1220">
    <Grid>
        <TabControl>
            <TabItem x:Name="tabCadastroBoleto" Header="Cadastro e Edição de Boletos">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Cadastro e Edição de Boletos" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" MouseLeftButtonDown="tabCadastroBoleto_Click" Height="45" Width="318"/>
                    <Label Content="Descrição/Empresa" HorizontalAlignment="Left" Margin="85,117,0,0" VerticalAlignment="Top" FontSize="14" Height="38" Width="161"/>
                    <Label Content="Tipo/Categoria" HorizontalAlignment="Left" Margin="85,194,0,0" VerticalAlignment="Top" Height="35" Width="112"/>
                    <Label Content="Valor" HorizontalAlignment="Left" Margin="89,272,0,0" VerticalAlignment="Top" FontSize="14" Height="38" Width="52"/>
                    <TextBox x:Name="txtBoxDescricaoCadastroBoleto" HorizontalAlignment="Left" Margin="257,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149" TabIndex="0" Height="24"/>
                    <TextBox x:Name="txtBoxValorCadastroBoleto" HorizontalAlignment="Left" Margin="257,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149" PreviewTextInput="txtBoxValorCadastroBoleto_PreviewTextInput" TabIndex="2" Height="23"/>
                    <CheckBox x:Name="checkBoxSituacaoCadastroBoleto" Content="Preenchido = Pago" HorizontalAlignment="Left" Margin="257,368,0,0" VerticalAlignment="Top" Height="22" IsChecked="False" FontSize="14" TabIndex="3" Width="172"/>
                    <Label Content="Situação" HorizontalAlignment="Left" Margin="89,359,0,0" VerticalAlignment="Top" FontSize="14" Height="38" Width="79"/>
                    <Button x:Name="btnSalvarCadastroBoleto" Content="Salvar" HorizontalAlignment="Center" Margin="0,444,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="59" Width="168" FontSize="18" Click="btnSalvarCadastroBoleto_Click" TabIndex="8">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="-0.005"/>
                                <RotateTransform Angle="-0.037"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Label Content="Emissão" HorizontalAlignment="Left" Margin="806,117,0,0" VerticalAlignment="Top" FontSize="14" Height="38" Width="75"/>
                    <Label Content="Vencimento" HorizontalAlignment="Left" Margin="806,194,0,0" VerticalAlignment="Top" FontSize="14" Height="39" Width="104"/>
                    <DatePicker x:Name="datePickEmissaoCadastroBoleto" HorizontalAlignment="Left" Margin="941,119,0,0" VerticalAlignment="Top" TabIndex="4" Height="32" Width="174"/>
                    <DatePicker x:Name="datePickVencimentoCadastroBoleto" HorizontalAlignment="Left" Margin="941,196,0,0" VerticalAlignment="Top" TabIndex="5" Height="32" Width="174"/>
                    <ComboBox x:Name="comboBoxTipoCadastroBoleto" HorizontalAlignment="Left" Margin="257,203,0,0" VerticalAlignment="Top" Width="149" ItemsSource="{Binding TipoBoleto}" DisplayMemberPath="Descricao" TabIndex="1" Height="31"/>
                    <ComboBox x:Name="comboBoxParcelaCadastroBoleto" HorizontalAlignment="Left" Margin="941,277,0,0" VerticalAlignment="Top" Width="174" ItemsSource="{Binding ItemComboBox}" DisplayMemberPath="Descricao" SelectedIndex="0" TabIndex="6" Height="29"/>
                    <Label Content="Parcelas" HorizontalAlignment="Left" Margin="806,272,0,0" VerticalAlignment="Top" FontSize="14" Height="38" Width="75"/>
                    <Label Content="Nº de Parcelas" HorizontalAlignment="Left" Margin="803,353,0,0" VerticalAlignment="Top" FontSize="14" Height="38" Width="125"/>
                    <TextBox x:Name="txtBoxNumeroParcelasCadastroBoleto" HorizontalAlignment="Left" Margin="941,362,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="174" TabIndex="7" Height="24"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabBuscaFiltroBoleto" Header="Busca e Filtragem de Boletos">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridBoletosFiltrados" Margin="0,133,0,65" AlternatingRowBackground="LightGray" CanUserAddRows="False" AutoGenerateColumns="False" CellEditEnding="dataGridBoletosFiltrados_CellEditEnding" ItemsSource="{Binding Boleto}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Width="*" Binding="{Binding Id}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Tipo" Width="2*" Binding="{Binding Tipo, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Descrição" Width="4*" Binding="{Binding Descricao, UpdateSourceTrigger=PropertyChanged}" />
                            <DataGridTextColumn Header="Valor" Width="2*" Binding="{Binding Valor, StringFormat=C2, ConverterCulture=pt-BR, UpdateSourceTrigger=PropertyChanged}" />
                            <DataGridTemplateColumn Header="Emissão" Width="2*" SortMemberPath="Emissao">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Emissao, UpdateSourceTrigger=PropertyChanged, StringFormat=dd/MM/yyyy}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Emissao, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Vencimento" Width="2*" SortMemberPath="Vencimento">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Vencimento, UpdateSourceTrigger=PropertyChanged, StringFormat=dd/MM/yyyy}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Vencimento, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn Header="Situação" Width="*" Binding="{Binding Situacao, UpdateSourceTrigger=PropertyChanged}" />
                            <DataGridTextColumn Header="Data de Cadastro" Width="2*" Binding="{Binding DataCadastro, UpdateSourceTrigger=PropertyChanged, StringFormat=dd/MM/yyyy}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Última Alteração" Width="2*" Binding="{Binding DataAlteracao, UpdateSourceTrigger=PropertyChanged, StringFormat=dd/MM/yyyy}" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Content="Mês" HorizontalAlignment="Left" Margin="729,63,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <Label Content="Dia" HorizontalAlignment="Left" Margin="580,63,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <Label Content="Ano" HorizontalAlignment="Left" Margin="878,63,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <ComboBox x:Name="comboBoxFiltroDia" HorizontalAlignment="Left" Margin="539,94,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding ItemComboBox}" DisplayMemberPath="Descricao" SelectedIndex="0"/>
                    <ComboBox x:Name="comboBoxFiltroMes" HorizontalAlignment="Left" Margin="688,94,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding ItemComboBox}" DisplayMemberPath="Descricao" SelectedIndex="0"/>
                    <ComboBox x:Name="comboBoxFiltroAno" HorizontalAlignment="Left" Margin="837,94,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding ItemComboBox}" DisplayMemberPath="Descricao" SelectedIndex="0"/>
                    <Label Content="/" HorizontalAlignment="Left" Margin="813,81,0,0" VerticalAlignment="Top" FontSize="22"/>
                    <Label Content="/" HorizontalAlignment="Left" Margin="664,81,0,0" VerticalAlignment="Top" FontSize="22"/>
                    <Label Content="Situação" HorizontalAlignment="Left" Margin="403,63,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <ComboBox x:Name="comboBoxFiltroSituacao" HorizontalAlignment="Left" Margin="370,94,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding ItemComboBox}" DisplayMemberPath="Descricao" SelectedIndex="0"/>
                    <TextBox x:Name="txtBoxFiltroDescricao" HorizontalAlignment="Left" Margin="56,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="262" Height="24"/>
                    <Label Content="Busca de Boletos" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
                    <Label Content="Descrição" HorizontalAlignment="Left" Margin="152,63,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <Label x:Name="labelSomaTotal" Content="Soma total :" HorizontalAlignment="Left" Margin="161,0,0,7" VerticalAlignment="Bottom" Width="135" FontSize="22"/>
                    <Label x:Name="labelSomaAPagar" Content="Soma a pagar :" HorizontalAlignment="Left" Margin="452,0,0,7" VerticalAlignment="Bottom" FontSize="22"/>
                    <TextBlock x:Name="txtBlockSomaTotal" HorizontalAlignment="Left" Margin="296,0,0,10" TextWrapping="Wrap" Text="-----" VerticalAlignment="Bottom" Width="151" FontSize="18"/>
                    <TextBlock x:Name="txtBlockSomaAPagar" HorizontalAlignment="Left" Margin="613,0,0,13" TextWrapping="Wrap" Text="-----" VerticalAlignment="Bottom" Width="132" FontSize="18"/>
                    <Label x:Name="labelSomaVencida" Content="Soma vencida :" HorizontalAlignment="Left" Margin="750,0,0,7" VerticalAlignment="Bottom" FontSize="22"/>
                    <TextBlock x:Name="txtBlockSomaVencida" HorizontalAlignment="Left" Margin="911,0,0,13" TextWrapping="Wrap" Text="-----" VerticalAlignment="Bottom" Width="119" FontSize="18"/>
                    <Button x:Name="btnBuscarBoletosFiltrados" Content="Buscar" HorizontalAlignment="Left" Margin="994,32,0,0" VerticalAlignment="Top" Width="210" Height="88" FontSize="24" Click="btnBuscarBoletosFiltrados_Click"/>
                    <Button x:Name="btnSalvarAlteracoesBoletosFiltrados" Content="Salvar Alterações" HorizontalAlignment="Right" Margin="1025,0,0,4" VerticalAlignment="Bottom" Height="44" Width="179" FontSize="18" Click="btnSalvarAlteracoesBoletosFiltrados_Click"/>
                    <Button x:Name="btnApagarBoletosFiltradosSelecionados" Content="Apagar Selecionados" HorizontalAlignment="Left" Margin="10,0,0,4" VerticalAlignment="Bottom" Height="42" Width="134" FontSize="14" Click="btnApagarBoletosFiltradosSelecionados_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabCadastroCategoriaBoleto" HorizontalAlignment="Center" Height="20" Header="Cadastro de Categoria de Boleto" VerticalAlignment="Top" Width="185" Margin="0,-1,0,0">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Nome da nova categoria:" HorizontalAlignment="Left" Margin="39,98,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtBoxNomeCadastroCategoria" HorizontalAlignment="Left" Margin="187,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="164" Height="22"/>
                    <Button x:Name="btnCadastrarCategoria" Content="Cadastrar" HorizontalAlignment="Left" Margin="148,153,0,0" VerticalAlignment="Top" Height="32" Width="121" Click="btnCadastrarCategoria_Click"/>
                    <Label Content="Cadastro de Nova Categoria" HorizontalAlignment="Left" Margin="111,47,0,0" VerticalAlignment="Top" Width="168" FontWeight="Bold"/>
                    <ListBox x:Name="listBoxQuadroCategoria" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="397,20,39,156">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding Descricao}" FontSize="20"/>
                                </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button x:Name="btnAtualizarQuadroCategoria" Content="Mostrar categorias / Atualizar" HorizontalAlignment="Left" Margin="514,407,0,0" VerticalAlignment="Top" Height="39" Width="228" Click="btnAtualizarQuadroCategoria_Click" FontSize="14"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
